<div class="modal fade" id="myEditEvent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content text-left">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="modal-title bold c-c4 modalextra" id="myModalLabel">EDIT EVENT</h2>
      </div>
      <div class="modal-body">
        <%= form_for(:event, :url => edit_events_path(:event), class: "form") do |f| %>
          <div class="field modalextra">
            <%= f.label :date %><br />
            <%= f.date_field :date, autofocus: true, :placeholder => "you need adate", class: "form-control"%>
          </div>
          <div class="field modalextra">
            <%= f.label :time %><br />
            <%= f.text_field :time, autofocus: true, :placeholder => "e.g. 9am - 1pm", class: "form-control"%>
          </div>
          <div class="field modalextra">
            <%= f.label :title %><br />
            <%= f.text_field :title, autofocus: true, :placeholder => "give it a title",class: "form-control" %>
          </div>
          <div class="field modalextra">
            <%= f.label :description %><br />
            <%= f.text_area :description, autofocus: true, :placeholder => "tell us about the event", class: "form-control"%>
          </div>
          <div class="field modalextra">
            <%= f.label :address %><br />
            <%= f.text_field :address_line_1, autofocus: true, :placeholder => "some street address",class: "form-control" %>
          </div>
          <div class="field modalextra">
            <%= f.label :city %><br />
            <%= f.text_field :city, autofocus: true, :placeholder => "some city",class: "form-control" %>
          </div>
          <div class="field modalextra">
            <%= f.label :zipcode %><br />
            <%= f.text_field :zipcode, autofocus: true, :placeholder => "some zip code", class: "form-control"%>
          </div>
          <div class="modalextra">
            <%= f.submit "Submit", class: "button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>